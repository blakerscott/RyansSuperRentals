{{#if addNewRental}}
  <h1>New Rental</h1>
    <div class="container">
      <form>
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input value=owner id="owner" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          {{input value=type id="type" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="bedrooms">Number of Bedrooms</label>
          {{input value=bedrooms id="bedrooms" type="number" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" class="form-control"}}
        </div>

        <div class="form-group">
          <label for="cost">Cost per night</label>
          {{input value=cost id="cost" type="number" class="form-control"}}
        </div>

        <button class="btn"{{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn"{{action 'rentalFormShow'}}>New Rental</button>
{{/if}}
